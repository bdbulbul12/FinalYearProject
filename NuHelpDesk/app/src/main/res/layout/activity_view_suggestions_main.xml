<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context="com.programmerhuntbd.bulbul.nuhelpdesk.Suggestions.ViewSuggestions.ViewSuggestionsMain">

    <Button
        android:id="@+id/sug_button_choose_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose file" />

    <EditText
        android:id="@+id/sug_edit_text_file_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_toEndOf="@+id/sug_button_choose_image"
        android:hint="Enter file name" />

    <ImageView
        android:id="@+id/sug_image_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/sug_edit_text_file_name"
        android:layout_marginTop="16dp"
        android:layout_alignBottom="@+id/sug_progress_bar" />

    <ProgressBar
        android:id="@+id/sug_progress_bar"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/sug_button_upload"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="16dp" />



    <Button
        android:id="@+id/sug_button_upload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="Upload" />

    <TextView
        android:id="@+id/sug_text_view_show_uploads"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/sug_button_upload"
        android:layout_alignTop="@+id/sug_button_upload"
        android:layout_marginStart="25dp"
        android:layout_toEndOf="@+id/sug_button_upload"
        android:gravity="center"
        android:text="Show Uploads"
        android:textSize="16sp" />

</RelativeLayout>

