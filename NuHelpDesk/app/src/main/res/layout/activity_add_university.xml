<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="7"
    tools:context="com.programmerhuntbd.bulbul.nuhelpdesk.Admin.AddUniversity">

    <include layout="@layout/my_appbar" android:id="@+id/main_app_bar"></include>

    <TextView
        android:layout_weight=".5"
        android:text="Add University"
        android:paddingLeft="20dp"
        android:paddingTop="40dp"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_marginBottom="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:layout_weight=".5"
        android:id="@+id/adminUvName"
        android:hint="University Name"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:layout_weight=".5"
        android:id="@+id/adminUvCode"
        android:hint="College Code"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:inputType="number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:layout_weight=".5"
        android:id="@+id/adminUvLocation"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:inputType="number"
        android:hint="Mobile No"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:layout_weight=".5"
        android:id="@+id/adminUvUrl"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:hint="Website Url"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/adminAddUv"
        android:layout_weight=".5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="19sp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/colorPrimary"
        android:paddingLeft="20dp"
        android:paddingRight="0dp"
        android:text="Add University?"
        android:textStyle="bold"
        android:textColor="@android:color/white" />

</LinearLayout>
