<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


   <LinearLayout
       android:layout_margin="10dp"
       android:orientation="vertical"
       android:padding="15dp"
       android:background="@drawable/ex_student_border_shape"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">

       <TextView
           android:text="Name"
           android:textAlignment="center"
           android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
           android:textStyle="bold"
           android:id="@+id/ex_text_view_name"
           android:layout_width="match_parent"
           android:layout_height="wrap_content" />

       <TextView
           android:text="Company"
           android:textAlignment="center"
           android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
           android:id="@+id/ex_text_view_company"
           android:textStyle="bold"
           android:layout_width="match_parent"
           android:layout_height="wrap_content" />

       <TextView
           android:layout_marginBottom="10dp"
           android:text="Contact"
           android:textAlignment="center"
           android:textStyle="bold"
           android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
           android:id="@+id/ex_text_view_contact"
           android:layout_width="match_parent"
           android:layout_height="wrap_content" />

       <View
           android:background="@color/authui_colorPrimary"
           android:layout_width="match_parent"
           android:layout_height="2dp">

       </View>

       <TextView
           android:layout_marginTop="10dp"
           android:text="College"
           android:textAlignment="center"
           android:textStyle="bold"
           android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
           android:id="@+id/ex_text_view_college"
           android:layout_width="match_parent"
           android:layout_height="wrap_content" />

   </LinearLayout>

</LinearLayout>